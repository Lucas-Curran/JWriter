<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:shape="rectangle">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#F54040"
                android:centerX=".8"
                android:centerColor="#353535"
                android:startColor="#32334D" />

        </shape>
    </item>

    <item
        android:left="150dp"
        android:right="-150dp">
        <shape
            android:shape="oval">

            <gradient
                android:startColor="#F97055"
                android:centerColor="#F55080"
                android:endColor="#F55080"
                android:centerX=".4"/>
        </shape>
    </item>

</layer-list>
