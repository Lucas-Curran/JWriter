<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <solid android:color="#2e5984" />
            <corners android:radius="15dp" />

        </shape>
    </item>

    <item android:bottom="15px">
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" />

            <!--            Button TOP Color -->
            <gradient
                android:angle="45"
                android:endColor="#0da2ff"
                android:startColor="@color/azure"
                android:type="linear" />

            <corners android:radius="15dp" />
        </shape>

    </item>


</layer-list>