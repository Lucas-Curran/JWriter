<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/faqRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/numberTextView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/faq_circle"
            android:elevation="10dp"
            android:gravity="center"
            android:text="å››"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignStart="@id/numberTextView"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/faq_box"
            android:gravity="top|start"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="This is some example text to demonstrate a question inside this box."
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/faqDivider"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#AAAAAA"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@id/questionTextView"
            android:layout_alignEnd="@id/questionTextView"
            android:layout_below="@id/numberTextView"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/faqDivider"
            android:text="More demonstration text to show the answer to the question."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="top|start"
            android:layout_alignStart="@id/questionTextView"
            android:layout_alignEnd="@id/questionTextView"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>