<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Custom" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="font">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="KanaSRS.Menu" parent="Widget.Material3.PopupMenu">
        <item name="popupMenuBackground">@drawable/menu_overflow_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/Popup.Style</item>
    </style>
    <style name="Popup.Style" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="BottomDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>