<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/levelItemLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rookie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/rookieNumKanaTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/square_outline"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_square"
            android:backgroundTint="#f200a0"
            android:gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Rookie"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/amateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/amateurNumKanaTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="0"
            android:textStyle="bold"
            android:background="@drawable/square_outline"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="Amateur"
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/rounded_square"
            android:backgroundTint="#9b34b4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/expertNumKanaTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/square_outline"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="Expert"
            android:textStyle="bold"
            android:background="@drawable/rounded_square"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="#4563df"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/master"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/masterNumKanaTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/square_outline"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="Master"
            android:textStyle="bold"
            android:background="@drawable/rounded_square"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="#01a0f2"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/senseiNumKanaTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/square_outline"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="Sensei"
            android:background="@drawable/rounded_square"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="#E1AD01"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30sp" />

    </LinearLayout>



</LinearLayout>