<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@drawable/stats_background">

    <LinearLayout
        android:id="@+id/hiraganaFractionLayout"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_cloud"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hiragana"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hiraganaFraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="46"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/currentHiraganaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="あ"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/katakanaFractionLayout"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_cloud"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hiraganaFractionLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Katakana"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/katakanaFraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="46"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/currentKatakanaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="ア"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/masteryBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:elevation="10dp"
        android:background="@drawable/stats_oval_background"
        app:layout_constraintTop_toBottomOf="@id/katakanaFractionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.skydoves.progressview.ProgressView
            android:id="@+id/kanaMasteryBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:progressView_labelText="0/92"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/white"
            app:progressView_labelSize="10sp"
            app:progressView_labelTypeface="bold"
            app:progressView_borderWidth="1dp"
            app:progressView_radius="0dp"
            app:progressView_max="92"
            app:progressView_colorBackground="@color/cardview_shadow_start_color"
            app:progressView_progress="0"
            app:progressView_borderColor="@color/black"
            app:progressView_colorProgress="@color/sensei_gold" />

    </FrameLayout>

    <TextView
        android:id="@+id/rookie"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="32"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:foreground="@drawable/stats_level_ripple"
        android:background="@drawable/stats_item_bubble"
        android:backgroundTint="@color/rookie_pink"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@id/masteryBarLayout"
        app:layout_constraintTop_toBottomOf="@id/masteryBarLayout"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/amateur"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:foreground="@drawable/stats_level_ripple"
        android:background="@drawable/stats_item_bubble"
        android:backgroundTint="@color/amateur_purple"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@id/rookie"
        app:layout_constraintTop_toBottomOf="@id/rookie"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/expert"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="15"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:foreground="@drawable/stats_level_ripple"
        android:background="@drawable/stats_item_bubble"
        android:backgroundTint="@color/expert_blue"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@id/amateur"
        app:layout_constraintTop_toBottomOf="@id/masteryBarLayout"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/master"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="14"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:foreground="@drawable/stats_level_ripple"
        android:background="@drawable/stats_item_bubble"
        android:backgroundTint="@color/master_blue"
        app:layout_constraintStart_toEndOf="@id/expert"
        app:layout_constraintTop_toBottomOf="@id/expert"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/sensei"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="19"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:foreground="@drawable/stats_level_ripple"
        android:background="@drawable/stats_item_bubble"
        android:backgroundTint="@color/sensei_gold"
        app:layout_constraintStart_toEndOf="@id/master"
        app:layout_constraintTop_toBottomOf="@id/masteryBarLayout"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/nextReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stats_oval_background"
        android:gravity="center"
        android:padding="10dp"
        android:elevation="10dp"
        android:text="Next Review: \n4:05:39"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/master" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bamboo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_bamboo"
        app:layout_constraintTop_toBottomOf="@id/nextReviewTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/panda"
        android:layout_width="167dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_panda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>