<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Custom" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="font">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="JWriter.Menu" parent="Widget.Material3.PopupMenu">
        <item name="popupMenuBackground">@drawable/dialog_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>