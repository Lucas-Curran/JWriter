<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/review_shadow" />
        </shape>
    </item>

    <item android:bottom="15px">
        <shape android:shape="oval">
            <padding
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"
                android:top="10dp" />

            <!--            Button TOP Color -->
            <gradient
                android:angle="45"
                android:endColor="#0dd2ff"
                android:startColor="@color/azure"
                android:type="linear" />

            <corners android:radius="15dp" />
        </shape>

    </item>

</layer-list>